{
  "$schema": "https://schema.hypermode.com/modus.json",
  "endpoints": {
    "default": {
      "type": "graphql",
      "path": "/graphql",
      "auth": "bearer-token"
    }
  },
  "connections": {
    "nyt": {
      "type": "http",
      "baseUrl": "https://api.nytimes.com/",
      "queryParameters": {
        "api-key": "{{API_KEY}}"
      }
    }
  }
}
